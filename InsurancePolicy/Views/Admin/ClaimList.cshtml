@model IEnumerable<InsurancePolicy.Models.Claim>

@{
    ViewData["Title"] = "ClaimList";
}

<h1>ClaimList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Policy.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Policy.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Policy.PolicyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Policy.PolicyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Policy.PolicyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Policy.PolicyAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Policy.UserId)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Policy.User.Name)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Policy.PolicyId)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Policy.PolicyName)
                    </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.Policy.PolicyType)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Policy.PolicyAmount)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimAmount)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            
            <td>
                <a href="@Url.Action("EditClaim","Admin", new {ClaimId= item.ClaimId})">Change Status</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
